<!DOCTYPE html>
<html>
<head>
  <title>Canon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <% if request.path != root_path %>
    <%= render "layouts/header_nav" %>
  <% end %>
  <div class="container">

  <% if notice %>
    <p class="alert ra-success flash red lighten-2 white-text"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert ra-error flash red lighten-2 white-text"><%= alert %></p>
  <% end %>

<%= yield %>
</div>
</body>
</html>
