<%= form_for @comment, remote: true do |f| %>
    <div class="form-group">
      <%= hidden_field(:comment, :user_id, value: current_user.id)%>
      <%= hidden_field(:comment, :question_id, value: @question.id)%>
      <%= f.label :body, 'Enter your comment:' %>
      <%= f.text_area :body, rows: 3, class: 'form-control', required: true, maxlength: 2000 %> <br>
      <%= f.submit 'Post', class: 'btn btn-primary btn-lg pull-right' %>
    </div>
<% end %>
