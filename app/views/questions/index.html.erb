<div class="row marginup">
  <div class="col s12 m8 19">
    <h6>Top Questions</h6>
    <div class="divider"></div>

    <% @questions.each do |question| %>
      <div class="card">
        <div class="card-content black-text">
          <%= link_to question.title, question_path(question), class: "card-title black-text" %>
          <p><%= question.body %></p>
          <a class="waves-effect btn red lighten-5">Upvote | 4</a>
        </div>
      </div>
    <% end %>
  </div>
</div>